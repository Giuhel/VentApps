<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.venta.ventapps">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_icono"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_icono_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VentApps"
        tools:targetApi="31">
        <activity
            android:name=".Actividades.productos.DetalleProducto"
            android:launchMode="singleTask"
            android:exported="false" />
        <activity
            android:name=".Actividades.productos.ListaProductos"
            android:launchMode="singleTask"
            android:exported="false" />
        <activity
            android:name=".Actividades.clientes.DetalleCliente"
            android:launchMode="singleTask"
            android:exported="false" />
        <activity
            android:name=".Actividades.clientes.ListadeCientes"
            android:launchMode="singleTask"
            android:exported="false" />
        <activity
            android:name=".Actividades.ventas"
            android:launchMode="singleTask"
            android:exported="false" />
        <activity
            android:name=".Actividades.Ayuda"
            android:launchMode="singleTask"
            android:exported="false" />
        <activity
            android:name=".Actividades.clientes.clientes"
            android:launchMode="singleTask"
            android:exported="false" />
        <activity
            android:name=".Actividades.productos.productos"
            android:launchMode="singleTask"
            android:exported="false" />
        <activity
            android:name=".Splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login.Login"
            android:launchMode="singleTask"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTask"
            android:exported="true" />
    </application>

</manifest>